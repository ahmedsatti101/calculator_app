<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <!-- Output field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:gravity="right"
        android:layout_marginLeft="10dp"
        android:id="@+id/mTextView"
        tools:text="0 "/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTextView"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"> 

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:onClick="DeleteButton_Click"
                android:src="@android:drawable/ic_input_delete"
                android:background="@drawable/button_rounded_corners"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/modulus_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:onClick="ModulusButton_Click"
                android:text="%"
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/brackets_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:onClick="BracketsButton_Click"
                android:text="(" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/brackets_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:onClick="BracketsButton_Click"
                android:text=")" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/SquareRootButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:onClick="SquareRootButton_Click"
                android:text="âˆš"
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>
            
            <Button
                android:id="@+id/exponentiation_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="ExponentButton_Click"
                android:text="^" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/divide_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:layout_marginLeft="6dp"
                android:textColor="#FF0"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="7" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="8" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="9" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/multiply_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="*"
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>
                
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="4"
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>
            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="5" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="6" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/minus_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="1"
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="2" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="3"
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/add_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/square_button"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:onClick="SquareButton_Click"
                android:text="x2"
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="0" 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/decimal_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:text="." 
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>

            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="="
                android:textSize="25dp"
                android:background="@drawable/button_rounded_corners"
                android:textColor="#FF0"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>